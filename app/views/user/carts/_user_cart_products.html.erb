<% unless carts.blank? %>
<%carts.each do |cart|%>
<div class="small-container cart-page">
  <center>
<table class="cart-table">
  <tr>
    <th class="cart-th">Product</th>
    <th class="cart-th">Quantity</th>
    <th class="cart-th">Price</th>
  </tr>
  <% sum=0%>
  <% cart.line_items.each do |lineitem |%>
  <% sum+=lineitem.price*lineitem.quantity %>
  <tr id="cart_product<%=lineitem.id%>">
    <td class="cart-td">
      <div class="cart-info">
        <%= image_tag(lineitem.product.picture_url, :width => 150, :height => 150 ,:radius => 10)%>
        <div>
          <p><%= lineitem.product.name %></p>
          <p><%= lineitem.product.about %></p>
          <small>price:<%= number_to_currency(lineitem.price,unit: "₹ ") %></small>
          <p>
            <%= link_to "REMOVE",user_remove_from_cart_path(product:lineitem.product.id,cart:cart.id,total:$total),method: :delete,class:"btn btn-primary btn-sm" ,style:"width:117px;",data: { confirm: "Are you sure?" },remote:true %></p>
        </div>
      </div>
    </td>
    <td class="cart-td">
        <%= form_with url:user_add_quantity_path,local: false do |form| %>
          <p>
            <%= form.hidden_field :id ,value:lineitem.id %>
            <%= form.hidden_field :cart_id ,value:cart.id %>
            <%= form.label :Quantity %><br>
            <%= form.number_field :quantity ,min: 1, max: 10,:style => "width:40px",name:"quantity#{lineitem.id}",value:lineitem.quantity%>
          </p>
          <p>
          <%= form.submit "ADD QUANTITY", class:"btn btn-secondary btn-sm"%>
          </p>
        <% end %>
    </td>
    <td class="total" id="price<%=lineitem.id%>"><%= number_to_currency(lineitem.price*lineitem.quantity,unit: "₹") %></td>
  <%end%>
  </tr>
</table>
  <div class="total-price">
    <table class="cart-table">
      <tr>
        <td class="cart-td">Total</td>
        <td class="total" id="total"><%=number_to_currency(sum,unit: "₹")%></td>
      </tr>
      <tr>
        <td></td>
        <td align="right">
          <% if cart.order %>
            <%= link_to "BUY NOW",edit_user_order_path(id:cart.order.id,total:sum,cart_id:cart.id),class:"btn btn-success btn-sm",id:"link"%>
          <% else %>
            <%= link_to "Buy Now",new_user_order_path(cart_id:cart.id,total:sum),class:"btn btn-success btn-sm",id:"link"%>
          <%end%>
        </td>
      </tr>
    </table>

  </div>
  <hr>
</div>
<%= link_to "Clear Cart" ,user_cart_path(cart),method: :delete,class:"btn btn-secondary",data:{ confirm: "Are you sure?" }%>
<%end%>
<%else%>
<h1>No Product Listed</h1>
<%end%>
