<center>
<h1>Category</h1>
<%= link_to "ADD CATEGORY",new_admin_category_path,class:"btn btn-success btn-sm"%>
</center>
<table class="table">
	 <thead class="table-light">
    <tr>
      <th>NAME</th>
      <th></th>
	    <th>Action</th>
      <th colspan="3"></th>
    </tr>
   </thead>
<tbody>
<% @categorys.each do |category|%>
    <% unless category.parent_id.present? %>
      <tr style="background: gray;">
          <td><%=category.category_name %></td>
          <td><%= link_to "EDIT" ,edit_admin_category_path(category),class:"btn btn-primary btn-sm"%></td>
          <td><%= link_to "delete" ,admin_category_path(category), method: :delete,class:"btn btn-danger btn-sm"%></td>
          <td><%= link_to "SUBACTEGORY" ,admin_category_path(category), class:"btn btn-success btn-sm"%></td>
      </tr>
</tbody>
    <%end%>
<%end%>
</table>
