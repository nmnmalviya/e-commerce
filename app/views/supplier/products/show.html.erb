

<center>
<div class="container mb-5 mt-5 container">
    <div class="col-md-4">
      <div class="card-mt-3 card">
        <div class="product-1 align-items-center p-2 text-center">     
            <%= image_tag(@product.picture_url, :width => 250, :height => 250 ,:radius => 10)%>
            <div class="mt-3 info">
              <span class="text1 d-block"><%= @product.name %></span>

              <span class="text1"><%= (@product.about) %></span>              
            </div>
            <div class="cost mt-3 text-dark">
              <span><%= number_to_currency(@product.price, unit: "â‚¹ ") %></span>
            <div class="star align-items-center">
              <span class="fa fa-star">&#9733;</span>
              <span class="fa fa-star">&#9733;</span>
              <span class="fa fa-star">&#9733;</span>
              <span class="fa fa-star">&#9733;</span>
              <span class="fa fa-star">&#9734;</span>
            </div>
            <div>
              <%= form_with url:supplier_add_stock_path,local: false do |form| %>
                <p>
                  <%= form.hidden_field :id ,value:@product.id %>
                  <%= form.label :Stock %><br>
                  <%= form.number_field :stock ,min: 1,:style => "width:60px",value:@product.stock%>
                </p>
                <p>
                  <%= form.submit "ADD STOCk", class:"btn btn-secondary btn-sm"%>
                </p>
              <% end %>
            </div>
            </div>
        </div> 
        <div class="p-3 text-center text-white mt-3 cursor cart">
            <span class="text-uppercase"><%= link_to "EDIT" , edit_supplier_product_path(@product),class:"btn btn-primary btn-sm"%>    <%= link_to "delete" ,supplier_product_path(@product), method: :delete,class:"btn btn-danger btn-sm",data: { confirm: "Are you sure?" }%>
            </span>
        </div>
      </div>
    </div>
</div>
</center>