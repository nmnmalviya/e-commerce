<style>

button {
  background: #333;
  color: #dd6ff8;
  font-family: monospace;
  font-weight: 600;
  font-size: 16px;
  letter-spacing: .2px;
  width: 150px;
  border-radius: 5px;
  border: 3px solid #dd6ff8;
  padding: 8px 6px;
  margin: 10% 45%;
  cursor: pointer;
}

button:focus {
  outline: none;
}

h1 {
  
  font-family: monospace;
  font-weight: 900;
  text-decoration: underline;
  text-decoration-style: wavy;
  text-decoration-color: #dd6ff8;
  text-underline-offset: 8px;
  margin: 0 2.5rem 1.5rem;
}

p {
  width: 75%;
  line-height: 1.5;
  margin: 0 2.5rem;
}

.modal {
  display: none; 
  position: fixed; 
  z-index: 1; 
  left: 0;
  top: 0;
  width: 100%; 
  height: 100%; 
  overflow: auto; 
  background-color: #000; /* Fallback color */
  background-color: rgba(0,0,0,0.3); 
}

.modal-content {
  background-color: #f5f5f5;
  height: auto;
  width: 50vw;
  border-radius: 2px;
  box-shadow: 0px 0px 54px 10px black;
  margin: 15% auto;
  padding: 1.5rem;
}

.close {
  color: #252525;
  float: right;
  font-size: 2.25rem;
  font-weight: bold;
  margin-right: 1rem;
}

.close:hover,
.close:focus {
  color: #dd6ff8;
  text-decoration: none;
  cursor: pointer;
}

@media screen and (max-width: 768px) {
  .modal-content {
    width: 90vw;
  }
  
  p {
    width: 100%;
  }
  
  button {
    margin: 2rem 30%;
  }
}

</style>


<button id="modalBtn">Rate Product</button>

<div id="modalEl" class="modal">

  <div class="modal-content">
    <span class="close">&times;</span>
    <h1>Rating</h1>
    <p>
    <center>
      <form action="http://localhost:3000/home/ratings/" method="post"  >
    <input name="_method" type="hidden" value="patch" />
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <p id="star" class="clasificacion">
       <input id="radio1" type="radio" name="rating" value="5"><!--
      --><label for="radio1">&#9733;</label><!--
      --><input id="radio2" type="radio" name="rating" value="4"><!--
      --><label for="radio2">&#9733;</label><!--
      --><input id="radio3" type="radio" name="rating" value="3"><!--
      --><label for="radio3">&#9733;</label><!--
      --><input id="radio4" type="radio" name="rating" value="2"><!--
      --><label for="radio4">&#9733;</label><!--
      --><input id="radio5" type="radio" name="rating" value="1"><!--
      --><label for="radio5">&#9733;</label>
    </p>
    <div>
      <input type="submit" value="submit" name="submit"/>
    </div>

  </form>
</center>
      </p>
    </div>

</div>


<script>
  var modal = document.getElementById("modalEl");

var btn = document.getElementById("modalBtn");

var span = document.getElementsByClassName("close")[0];

// open the modal when the button is clicked
btn.onclick = function() {
  modal.style.display = "block";
}

// close the modal when the 'X' is clicked
span.onclick = function() {
  modal.style.display = "none";
}

// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
  if (event.target == modal) {
    modal.style.display = "none";
  }
}
</script>